---
import Markdown from "@astrojs/markdown-component";
import "../styles/global.css";

const introUrl =
  "https://raw.githubusercontent.com/MarSavar/MarSavar/main/README.md";
const markdown = await fetch(introUrl);
const markdownText = await markdown.text();
const intro = markdownText
  .split("\n")
  .filter((line) => !line.startsWith("#"))
  .join("\n");
---

<div>
  <Markdown>
    {intro}
  </Markdown>
</div>

<style>
  div {
    margin-top: 4rem;
    font-size: 1.2rem;
    line-height: 1.6rem;
    max-width: 1000px;
  }

  li {
    list-style-type: none;
  }

  ul {
    padding-left: 0;
  }
</style>
