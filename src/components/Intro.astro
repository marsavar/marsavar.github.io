---
import { Markdown } from "astro-remote";
import "../styles/global.css";

const introUrl =
  "https://raw.githubusercontent.com/marsavar/marsavar/main/README.md";
const markdown = await fetch(introUrl);
const markdownText = await markdown.text();
const intro = markdownText
  .split("\n")
  .filter((line) => !line.startsWith("#"))
  .join("\n");
---

<div>
  <Markdown content={intro} />
</div>

<style>
  div {
    margin-top: 4rem;
    font-size: 1.2rem;
    line-height: 1.6rem;
    max-width: 1000px;

    ul {
      padding-left: 0;
    }

    li {
      list-style-type: none;
    }
  }
</style>
