---
import "../styles/global.css";
---

<div>
  <h1>Mario Savarese</h1>

  <style lang="scss">
    h1 {
      font-family: "Inter", sans-serif;
      font-weight: 800;
      font-size: 3rem;
      letter-spacing: -2pt;
      text-transform: lowercase;
      margin: 0;
      border-bottom: 6px solid #fcd303;
      display: inline-block;
      opacity: 1;
      animation: fade 1.5s linear;
      @keyframes fade {
        0% {
          opacity: 0.2;
        }
        100% {
          opacity: 1;
        }
      }
    }
  </style>
</div>
